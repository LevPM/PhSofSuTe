<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="1080.0" maxWidth="1920.0" prefHeight="729.0" prefWidth="1296.0"
      style="-fx-border-color: black; -fx-border-radius: 18; -fx-border-width: 6; -fx-background-color: PapayaWhip;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.riddle.controller.MenuController">
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
      <Label alignment="CENTER" text="Physics Simulator" textAlignment="JUSTIFY" textFill="NAVY" underline="true">
         <font>
            <Font name="Bank Gothic Light BT" size="96.0"/>
         </font>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </padding>
      </Label>
      <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" text="of Surface Tension" textAlignment="JUSTIFY"
             textFill="NAVY">
         <font>
            <Font name="Corbel Bold" size="64.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0"/>
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0"/>
         </padding>
      </Label>
   </VBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <Button id="settingsButton" alignment="CENTER" contentDisplay="CENTER"
                 layoutX="657.0" layoutY="126.0" mnemonicParsing="false" onAction="#handleSettingButtonAction"
                 style="-fx-border-color: Maroon; -fx-border-width: 2; -fx-background-color: DarkKhaki; -fx-background-radius: 60; -fx-border-radius: 60;"
                 text="Settings" textFill="MAROON">
            <font>
               <Font name="System Bold" size="36.0"/>
            </font>
         </Button>
         <Button id="startButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                 onAction="#handleStartButtonAction"
                 style="-fx-border-color: Navy; -fx-border-width: 2; -fx-background-color: Goldenrod; -fx-background-radius: 50; -fx-border-radius: 50;"
                 text="Start" textAlignment="JUSTIFY" textFill="NAVY">
            <font>
               <Font name="System Bold Italic" size="48.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Button>
         <Button id="authorsButton" alignment="CENTER" contentDisplay="CENTER"
                 layoutX="568.0" layoutY="109.0" mnemonicParsing="false" onAction="#handleAuthorsButtonAction"
                 style="-fx-border-color: Maroon; -fx-border-width: 2; -fx-background-color: DarkKhaki; -fx-background-radius: 60; -fx-border-radius: 60;"
                 text="Authors" textFill="MAROON">
            <font>
               <Font name="System Bold" size="36.0"/>
            </font>
         </Button>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="20.0"/>
         </VBox.margin>
         <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                 onAction="#handleCloseButtonAction"
                 style="-fx-border-color: Maroon; -fx-border-width: 2; -fx-background-color: DarkKhaki; -fx-background-radius: 60; -fx-border-radius: 60;"
                 text="Close" textFill="MAROON">
            <font>
               <Font name="System Bold" size="36.0"/>
            </font>
         </Button>
      </HBox>
   </VBox>
</VBox>
